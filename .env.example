# Staffing Optimization System Environment Configuration
# Copy this file to .env and modify values as needed

# Application Environment
ENVIRONMENT=development
DEBUG=true
APP_NAME="Staffing Optimization System"
APP_VERSION="1.0.0"

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1

# Database Configuration (if using database)
# DATABASE_URL=postgresql://user:password@localhost:5432/staffing_db
DATABASE_POOL_SIZE=5
DATABASE_MAX_OVERFLOW=10

# ML Model Configuration
MODEL_RETRAIN_INTERVAL_DAYS=7
FORECAST_HORIZON_DAYS=7
MIN_TRAINING_DATA_POINTS=20

# Business Logic Configuration
REGULAR_HOURLY_RATE=18.50
OVERTIME_MULTIPLIER=1.5
TEMP_WORKER_RATE=22.00
TARGET_SERVICE_LEVEL=0.98
UNDERSTAFFING_PENALTY=150.0

# Operational Constraints
MIN_STAFF_PER_SHIFT=2
MAX_STAFF_PER_SHIFT=25
BREAK_COVERAGE_FACTOR=0.2

# File Paths
DATA_DIRECTORY=data
OUTPUT_DIRECTORY=output
MODELS_DIRECTORY=models
LOGS_DIRECTORY=logs

# External Services
# REDIS_URL=redis://localhost:6379/0
MONITORING_ENABLED=true
METRICS_PORT=9090

# Security
SECRET_KEY=your-secret-key-change-in-production-please
ALLOWED_HOSTS=["*"]

# Logging
LOG_LEVEL=INFO